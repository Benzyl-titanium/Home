---
import MainGridLayout from "../layouts/MainGridLayout.astro";
---

<MainGridLayout title="404 - 页面未找到" description="页面未找到">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full text-center">
            <h1 class="text-4xl font-bold mb-4">404</h1>
            <p class="text-lg mb-6">404 - 页面未找到</p>
            <a href="/" class="inline-block px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors">
                返回首页
            </a>
        </div>
    </div>
</MainGridLayout> 